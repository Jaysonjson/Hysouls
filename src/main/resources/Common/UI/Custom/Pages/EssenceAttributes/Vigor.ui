$Common = "../../Common.ui";

@LeftArrow = PatchStyle(TexturePath: "../LeftArrow.png");

Group #VigorGroup {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "Vigor";
      Anchor: (Width: 220, Height: 44);
      Style: (FontSize: 18, RenderBold: true, VerticalAlignment: Center);
    }

    Label #CurrentVigor {
      Text: "0";
      Anchor: (Width: 100, Height: 44);
      Style: (FontSize: 18, VerticalAlignment: Center, HorizontalAlignment: Center);
    }

    Panel {
      Background: @LeftArrow;
      Anchor: (Width: 22, Height: 12);
    }

    Group {
      Anchor: (Width: 80);
    }

    $Common.@SmallSecondaryTextButton #VigorMinus {
      Text: "-";
      Anchor: (Width: 35, Height: 35);
    }

    Label #NextVigor {
      Text: "99";
      Anchor: (Width: 80, Height: 44);
      Style: (FontSize: 18, VerticalAlignment: Center, HorizontalAlignment: Center);
    }

    $Common.@SmallSecondaryTextButton #VigorPlus {
      Text: "+";
      Anchor: (Width: 35, Height: 35);
    }
}